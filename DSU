// verify : codeforces.com/contest/292/submission/145601773
template<typename T>
struct dsu {
    vector<T> pr;
    T n;
    dsu(T n) : n(n) {
        pr.resize(n);
        iota(pr.begin(), pr.end(), 0);
    }

    T findpr(T v){
        return pr[v] = (v == pr[v] ? v : findpr(pr[v]));
    }

    bool merge(T v, T u){
        v = findpr(v);
        u = findpr(u);
        if(u == v)
            return 0;
        pr[v] = u;
        return 1;
    }
};
