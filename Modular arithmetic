#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

const int N = 1e5;
const int M = 1e9 + 7;
ll fact[N], inv[N];
ll powmod(ll a, ll b){
    ll r=1;
    while(b){
        if(b&1)r=r*a%M;
        a=a*a%M;
        b/=2;
    }
    return r;
}

// // O(log n)
// ll C(ll a, ll b){
//     if(a < b) return 0;
//     return ((fact[a] * powmod(fact[b], M-2)) % M) * powmod(fact[a-b], M-2) % M;
// }

// O(1)
ll C(ll a, ll b){
    if(a < b) return 0;
    return ((fact[a] * inv[fact[b]]) % M) * inv[fact[a-b]] % M;
}

int main(){
    cin.tie(0) -> ios_base::sync_with_stdio(0);

    fact[1] = 1;
    for(int i=2;i<N;i++)
        fact[i] = fact[i-1] * i % M;

    inv[1] = 1;
    for(int i=2;i<N;i++)
        inv[i] = M - (M / i) * inv[M % i] % M;

    int a, b;
    cin >> a >> b;
    cout << C(a, b);
    
    
}
